<div class="row" style="margin-top:25px;">
	<div class="small-12 columns">
		<p>Go after it! <%= link_to "Susan Boyle chases her dream and rises above the odds", "http://www.youtube.com/watch?v=jca_p_3FcWA" %></p>
	</div>
</div>


<div class="row">
  <div class="small-8 columns">


		<% @goals.each do |goal| %>
		<div class="goal-block">
			<h3><%= link_to "#{goal.name}", goal %></h3>
			<p>
				<%= goal.description %>
			<br />
				<% if goal.complete %>
					<span class="round secondary label">Complete</span>
				<% else %>
					<span class="round success label">Active</span>
				<% end %>
				&nbsp;<span class="lighter-text"><%= goal.updates.size %> Updates</span>
			</p>
		</div>

		<% end %>
	</div>
  <div class="small-4 columns">
		<%= link_to '+ New Goal', new_goal_path %>
	</div>
</div>





