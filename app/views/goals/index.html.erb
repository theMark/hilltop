<h1>Listing goals</h1>



<% @goals.each do |goal| %>
<div style="margin-bottom:30px;">

<h4><%= link_to "#{goal.name}", goal %></h4>
<p><%= goal.description %> - Complete (<%= goal.complete %>) - User(<%= goal.user_id %>) <br />
		<%= link_to 'Edit', edit_goal_path(goal) %> | <%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div>

<% end %>


<%= link_to 'New Goal', new_goal_path, :class => "button round" %>
